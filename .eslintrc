{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-console": 1,
    "no-unused-vars": "warn",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi-style": [
      "error",
      "last"
    ],
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "no-irregular-whitespace": "error",
    "no-trailing-spaces": "error",
    "no-multi-spaces": "error",
    "eqeqeq": [
      "error",
      "always"
    ]
  },
  "env": {
    "browser": true,
    "node": true
  }
}